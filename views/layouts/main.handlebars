            <div class="form-group">
              <label for="exampleFormControlSelect1">Toilet Type</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option>Toilet</option>
                <option>Bidet</option>
              </select>
            </div>
            <div class="form-group">
